{
  "manifest_version": 2,
  "name": "Private Mode",
  "version": "0.3",
  "description": "Allows the toggling of privacy-related browser features",
  "homepage_url": "https://github.com/thomasebsmith/private-mode",
  "browser_specific_settings": {
    "gecko": {
      "id": "privateMode@thomasebsmith.github.io",
      "strict_min_version": "58.0"
    }
  },
  "icons": {
    "48": "icons/48.png"
  },
  "permissions": [
    "<all_urls>",
    "privacy",
    "storage",
    "webNavigation"
  ],
  "background": {
    "scripts": ["util/storage.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "Private Mode"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
